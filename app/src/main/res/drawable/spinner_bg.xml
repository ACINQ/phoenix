<ripple xmlns:android="http://schemas.android.com/apk/res/android"
  android:color="?attr/colorPrimary"
  android:exitFadeDuration="@android:integer/config_mediumAnimTime">

  <item android:id="@android:id/mask">
    <shape android:shape="rectangle">
      <solid android:color="?attr/defaultButtonColor" />
      <corners android:radius="@dimen/button_corner" />
    </shape>
  </item>

  <item>
    <layer-list>
      <item
        android:id="@android:id/background"
        android:drawable="@drawable/rounded" />
      <item
        android:width="@dimen/text_lg"
        android:height="@dimen/text_lg"
        android:drawable="@drawable/ic_chevron_down"
        android:gravity="center|right"
        android:right="12dp" />
    </layer-list>
  </item>


</ripple>
