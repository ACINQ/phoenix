<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/space_xl">

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/body_guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.45" />

    <TextView
      android:id="@+id/header"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/ftue__backup_seed__header"
      android:layout_marginBottom="@dimen/space_md"
      android:lineSpacingMultiplier="1"
      android:textAlignment="viewEnd"
      android:textSize="32sp"
      app:layout_constraintBottom_toTopOf="@id/body_guideline"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintWidth_max="@dimen/max_width_sm" />

    <ScrollView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constrainedHeight="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/body_guideline"
      app:layout_constraintVertical_bias="0"
      app:layout_constraintWidth_max="@dimen/max_width_sm">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/body"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/ftue__backup_seed__body"
          android:textSize="@dimen/text_lg"
          android:textAlignment="center"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <fr.acinq.phoenix.utils.customviews.ButtonView
          android:id="@+id/finish_button"
          android:layout_width="wrap_content"
          android:background="@drawable/rounded_border_primary"
          android:layout_marginTop="@dimen/space_xl"
          android:layout_height="wrap_content"
          app:icon="@drawable/ic_check"
          app:layout_constraintTop_toBottomOf="@id/body"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:icon_tint="?attr/colorPrimary"
          app:text="@string/ftue__backup_seed__button" />

      </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
