<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="model"
      type="fr.acinq.eclair.phoenix.send.InitSendViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".send.InitSendFragment">

    <ImageView
      android:id="@+id/scan_placeholder"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_marginTop="@dimen/space_lg"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:contentDescription="@string/utils_unknown"
      android:tint="@color/grey_light_3"
      android:src="@drawable/ic_photo_camera_black_24dp" />

    <Button
      android:id="@+id/paste_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/space_lg"
      app:layout_constraintTop_toBottomOf="@+id/scan_placeholder"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:text="@string/send_init_paste" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
