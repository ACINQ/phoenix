<resources>

  <attr name="actionBarViewStyle" format="reference" />
  <attr name="buttonViewStyle" format="reference" />
  <declare-styleable name="default_theme">
    <attr name="buttonViewStyle" />
  </declare-styleable>

  <!-- theme background attributes -->
  <attr name="bgColor" format="reference" />
  <attr name="altBgColor" format="reference" />
  <attr name="mutedBgColor" format="reference" />

  <!-- theme misc attributes -->
  <attr name="borderColor" format="reference" />
  <attr name="buttonRippleColor" format="reference" />

  <!-- theme text attributes -->
  <attr name="textColor" format="reference" />
  <attr name="mutedTextColor" format="reference" />
  <attr name="onMutedBgTextColor" format="reference" />
  <attr name="negativeColor" format="reference" />
  <attr name="positiveColor" format="reference" />
  <attr name="altTextColor" format="reference" />

  <!-- widgets attributes -->
  <attr name="text" format="string" />
  <attr name="text_color" format="color" />
  <attr name="text_size" format="dimension" />
  <attr name="icon" format="reference" />
  <attr name="icon_tint" format="color" />
  <attr name="icon_size" format="dimension" />

  <declare-styleable name="ProgressTextView">
    <attr name="text" />
    <attr name="text_color" />
    <attr name="text_size" />
    <attr name="progress_tint" format="color" />
  </declare-styleable>
  <declare-styleable name="CoinView">
    <attr name="force_btc" format="boolean" />
    <attr name="amount_size" format="dimension" />
    <attr name="amount_color" format="color" />
    <attr name="thin" format="boolean" />
    <attr name="unit" format="string" />
    <attr name="unit_size" format="dimension" />
    <attr name="unit_color" format="color" />
  </declare-styleable>
  <declare-styleable name="ButtonView">
    <attr name="text" />
    <attr name="text_color" />
    <attr name="text_size" />
    <attr name="icon" />
    <attr name="icon_tint" />
    <attr name="icon_size" />
    <attr name="spacer_size" format="dimension" />
    <attr name="hz_bias" format="float" />
    <attr name="is_paused" format="boolean" />
    <attr name="paused_text" format="string" />
  </declare-styleable>
  <declare-styleable name="SwitchView">
    <attr name="text" />
    <attr name="text_color" />
    <attr name="text_size" />
    <attr name="icon" />
    <attr name="icon_tint" />
    <attr name="icon_size" />
  </declare-styleable>
  <declare-styleable name="ActionBarView">
    <attr name="title" format="string" />
    <attr name="subtitle" format="string" />
  </declare-styleable>
</resources>
