<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <!--
        Rules for cloud backup for devices running on Android 12 and later.
        If running on older versions of android, see rules in file ..._before_12.xml
    -->
    <cloud-backup disableIfNoEncryptionCapabilities="true">
        <!-- the content of the phoenix backup folder is backed-up to the cloud (files are encrypted, see utils/LocalBackupHelper). -->
        <include domain="file" path="phoenix-backup/" />
        <!-- Datastore for user preferences is backed-up. -->
        <include domain="file" path="datastore/userprefs.preferences_pb" />
        <!-- Any other files that do not match the include rules above will NOT be backed up. -->
        <!-- No need to add specific excludes. -->
    </cloud-backup>

    <!--
        Rules for device-to-device transfers.
    -->
    <device-transfer>
        <!-- the content of the phoenix backup folder is transferred (files are encrypted, see utils/LocalBackupHelper). -->
        <include domain="file" path="phoenix-backup/" />
        <!-- Datastore for user preferences is transferred. -->
        <include domain="file" path="datastore/userprefs.preferences_pb" />
        <!-- Any other files that do not match the include rules above will NOT be transferred. -->
        <!-- No need to add specific excludes. -->
    </device-transfer>
</data-extraction-rules>