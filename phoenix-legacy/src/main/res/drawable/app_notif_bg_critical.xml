<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape android:shape="rectangle">
      <solid android:color="?attr/negativeColor" />
      <corners android:radius="2dp" />
    </shape>
  </item>
  <item android:left="4dp">
    <shape android:shape="rectangle">
      <solid android:color="?attr/bgColor" />
      <stroke android:width="1dp" android:color="?attr/negativeColor" />
      <corners
        android:radius="1dp" />
    </shape>
  </item>
</layer-list>
