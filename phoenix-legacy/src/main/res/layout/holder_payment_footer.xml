<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/button_bg_square"
  android:paddingLeft="@dimen/space_md"
  android:paddingTop="@dimen/space_md"
  android:paddingRight="@dimen/space_md"
  android:paddingBottom="64dp">

  <fr.acinq.phoenix.legacy.utils.customviews.ButtonView
    android:id="@+id/footer_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:icon="@drawable/ic_chevron_down"
    app:text="@string/legacy_main_payments_history_button"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:backgroundTint="?attr/mutedBgColor"
    app:text_size="@dimen/text_sm"
    app:icon_size="16dp"
    app:spacer_size="@dimen/space_xs"
    android:padding="@dimen/space_xs" />

</androidx.constraintlayout.widget.ConstraintLayout>
